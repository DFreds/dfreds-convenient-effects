<form id="edit-folder-dialog" autocomplete="off">
    <div class="form-group">
        <label>{{localize "FOLDER.FIELDS.name.label"}}</label>
        <div class="form-fields">
            <input
                type="text"
                name="name"
                placeholder="{{newName}}"
                value="{{name}}"
                autofocus
            />
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "FOLDER.FIELDS.color.label"}}</label>
        <div class="form-fields">
            <color-picker name="color" value="{{color}}"></color-picker>
        </div>
    </div>
</form>
