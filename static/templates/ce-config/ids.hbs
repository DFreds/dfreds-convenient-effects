<section class="tab{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="form-group">
        <label>{{localize "ConvenientEffects.ConfigFoundryEffectIdLabel"}}</label>
        <div class="form-fields">
            <input
                name="foundryEffectId"
                type="text"
                value="{{effect.id}}"
                disabled
            />
        </div>
        <p class="hint">{{localize
                "ConvenientEffects.ConfigFoundryEffectIdHint"
            }}</p>
    </div>

    <div class="form-group">
        <label>{{localize
                "ConvenientEffects.ConfigConvenientEffectIdLabel"
            }}</label>
        <div class="form-fields">
            <input
                type="text"
                name="ceEffectId"
                value="{{getCeEffectId effect}}"
                disabled
            />
        </div>
        <p class="hint">{{localize
                "ConvenientEffects.ConfigConvenientEffectIdHint"
            }}</p>
    </div>
</section>
